{% extends 'layout.html.twig' %}
{% import 'AppBundle:diver:macros.html.twig' as macros %}

{% block title %}Divers{% endblock %}

{% block content %}
    {{ form_start(form) }}
        <h1 class="page-header">Divers</h1>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Diver details
                        <div class="pull-right">
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary btn-xs" data-toggle="collapse" data-target="#diverDetails">
                                    <span class="glyphicon glyphicon-chevron-down"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div id="diverDetails" class="panel-body collapse">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="col-xs-2">
                                        {{ form_row(form.initials) }}
                                        <p class="help-block"></p>
                                    </div>
                                    <div class="col-xs-2">
                                        {{ form_row(form.inserts) }}
                                        <p class="help-block"></p>
                                    </div>
                                    <div class="col-xs-4">
                                        {{ form_row(form.lastName) }}
                                        <p class="help-block"></p>
                                    </div>
                                    <div class="col-xs-4">
                                        {{ form_row(form.firstName) }}
                                        <p class="help-block"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-2">
                                        <p class="visible-lg-block"></p>
                                            {{ form_row(form.gender) }}
                                        <p class="help-block"></p>
                                    </div>
                                    <div class="col-xs-8">
                                        <p class="visible-lg-block"></p>
                                        {{ form_row(form.dateOfBirth) }}
                                    </div>
                                </div>
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="col-xs-11">
                                        {{ form_row(form.country) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-9">
                                        {{ form_row(form.street) }}
                                        <p class="help-block"></p>
                                    </div>
                                    <div class="col-xs-2">
                                        {{ form_row(form.postalCode) }}
                                        <p class="help-block"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-11">
                                        {{ form_row(form.city) }}
                                        <p class="help-block"></p>
                                    </div>
                                </div>
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default" >
                    <div class="panel-heading">
                        Certifications
                        <div class="pull-right">
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary btn-xs" id="btn-add">
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>
                            </div>
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary btn-xs" data-toggle="collapse" data-target="#certification">
                                    <span class="glyphicon glyphicon-chevron-down"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div id="certification" class="panel-body collapse in">
                        <div class="row">
                            <div id="education_fields">

                            </div>
                            <div class="col-sm-2 nopadding">
                                <div class="form-group">
                                    <label>Organisation</label>
                                </div>
                            </div>
                            <div class="col-sm-2 nopadding">
                                <div class="form-group">
                                    <label>Certificate</label>
                                </div>
                            </div>
                            <div class="col-sm-2 nopadding">
                                <div class="form-group">
                                    <label>Obtained</label>
                                </div>
                            </div>
                            <div class="col-sm-2 nopadding">
                                <div class="form-group">
                                    <label>Registration. no.</label>
                                </div>
                            </div>
                            <div class="col-sm-2 nopadding">
                                <div class="form-group">
                                    <label>Instructor</label>
                                </div>
                            </div>

                            <div class="col-sm-2 nopadding">
                                <div class="form-group">
                                    <label>Instructor Reg. no.</label>
                                </div>
                            </div>
                        </div>
                        {% for certificateField in form.certificates %}
                            {{ macros.certificateCollection(certificateField) }}
                        {%  endfor %}
                    </div>
                </div>
            </div>
                <!-- /.panel -->
        </div>
            <!-- /.col-lg-12 -->
    </div>
        <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default" >
                <div class="panel-body">
                    <div class="row">
                        <div class="form-group">
                            <div class="col-lg-9">
                                <a href="{{ path('diver') }}" class="btn btn-default" >Cancel</a>
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    {{ form_row(form._token) }}
    {{ form_end(form) }}
{% endblock %}

