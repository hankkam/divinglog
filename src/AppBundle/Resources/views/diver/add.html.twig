{% extends 'layout.html.twig' %}
{% import 'AppBundle:diver:macros.html.twig' as macros %}

{% block title %}Diver{% endblock %}

{% block content %}
    {{ form_start(form) }}
    <h1 class="page-header">Diver {{ fullname }}</h1>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Contact information
                    <div class="pull-right">
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary btn-xs" data-toggle="collapse" data-target="#diverDetails">
                                <span class="glyphicon glyphicon-chevron-down"></span>
                            </button>
                        </div>
                    </div>
                </div>
                <div id="diverDetails" class="panel-body collapse in">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-xs-2">
                                    {{ form_row(form.initials) }}
                                    <p class="help-block"></p>
                                </div>
                                <div class="col-xs-2">
                                    {{ form_row(form.inserts) }}
                                    <p class="help-block"></p>
                                </div>
                                <div class="col-xs-4">
                                    {{ form_row(form.lastName) }}
                                    <p class="help-block"></p>
                                </div>
                                <div class="col-xs-4">
                                    {{ form_row(form.firstName) }}
                                    <p class="help-block"></p>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-2">
                                    <p class="visible-lg-block"></p>
                                        {{ form_row(form.gender) }}
                                    <p class="help-block"></p>
                                </div>
                                <div class="col-xs-8">
                                    <p class="visible-lg-block"></p>
                                    {{ form_row(form.dateOfBirth) }}
                                </div>
                            </div>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-xs-11">
                                    {{ form_row(form.country) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-9">
                                    {{ form_row(form.street) }}
                                    <p class="help-block"></p>
                                </div>
                                <div class="col-xs-2">
                                    {{ form_row(form.postalCode) }}
                                    <p class="help-block"></p>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-11">
                                    {{ form_row(form.city) }}
                                    <p class="help-block"></p>
                                </div>
                            </div>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default" >
                <div class="panel-heading">
                    Certifications
                    <div class="pull-right">
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary btn-xs" id="btn-add">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary btn-xs" data-toggle="collapse" data-target="#certification">
                                <span class="glyphicon glyphicon-chevron-down"></span>
                            </button>
                        </div>
                    </div>
                </div>
                <div id="certification" class="panel-body collapse in">
                    <div class="row">
                        <div class="col-sm-2 nopadding">
                            <div class="form-group">
                                <label>Organisation</label>
                            </div>
                        </div>
                        <div class="col-sm-2 nopadding">
                            <div class="form-group">
                                <label>Certificate</label>
                            </div>
                        </div>
                        <div class="col-sm-2 nopadding">
                            <div class="form-group">
                                <label>Obtained</label>
                            </div>
                        </div>
                        <div class="col-sm-2 nopadding">
                            <div class="form-group">
                                <label>Registration. no.</label>
                            </div>
                        </div>
                        <div class="col-sm-2 nopadding">
                            <div class="form-group">
                                <label>Instructor</label>
                            </div>
                        </div>

                        <div class="col-sm-2 nopadding">
                            <div class="form-group">
                                <label>Instructor Reg. no.</label>
                            </div>
                        </div>
                    </div>

                    {% for certificateField in form.certificates %}
                        {{ macros.certificateCollection(certificateField) }}
                    {%  endfor %}

                    <div id="education_fields">
                    </div>

                    <div id="certificatePrototype" data-prototype="{{ macros.certificateCollection(form.certificates.vars.prototype)|e }}"></div>
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default" >
                <div class="panel-heading">
                    Specialties
                    <div class="pull-right">
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary btn-xs" id="btn-add-specialty">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary btn-xs" data-toggle="collapse" data-target="#specialties">
                                <span class="glyphicon glyphicon-chevron-down"></span>
                            </button>
                        </div>
                    </div>
                </div>
                <div id="specialties" class="panel-body collapse in">
                    <div class="row">
                        <div class="col-sm-2 nopadding">
                            <div class="form-group">
                                <label>Organisation</label>
                            </div>
                        </div>
                        <div class="col-sm-2 nopadding">
                            <div class="form-group">
                                <label>Specialty</label>
                            </div>
                        </div>
                        <div class="col-sm-2 nopadding">
                            <div class="form-group">
                                <label>Obtained</label>
                            </div>
                        </div>
                        <div class="col-sm-2 nopadding">
                            <div class="form-group">
                                <label>Registration. no.</label>
                            </div>
                        </div>
                        <div class="col-sm-2 nopadding">
                            <div class="form-group">
                                <label>Instructor</label>
                            </div>
                        </div>

                        <div class="col-sm-2 nopadding">
                            <div class="form-group">
                                <label>Instructor Reg. no.</label>
                            </div>
                        </div>
                    </div>

                    {% for specialtyField in form.specialties %}
                        {{ macros.specialtyCollection(specialtyField) }}
                    {%  endfor %}

                    <div id="specialty_fields">
                    </div>

                    <div id="specialtyPrototype" data-prototype="{{ macros.specialtyCollection(form.specialties.vars.prototype)|e }}"></div>
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default" >
                <div class="panel-heading">
                    Diving equipment
                    <div class="pull-right">
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary btn-xs" id="btn-add-equipment">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary btn-xs" data-toggle="collapse" data-target="#equipment">
                                <span class="glyphicon glyphicon-chevron-down"></span>
                            </button>
                        </div>
                    </div>
                </div>
                <div id="equipment" class="panel-body collapse in">
                    <div class="row">
                        <div class="col-sm-2 nopadding">
                            <div class="form-group">
                                <label>Type</label>
                            </div>
                        </div>
                        <div class="col-sm-3 nopadding">
                            <div class="form-group">
                                <label>Brand</label>
                            </div>
                        </div>
                        <div class="col-sm-3 nopadding">
                            <div class="form-group">
                                <label>brand type</label>
                            </div>
                        </div>
                        <div class="col-sm-4 nopadding">
                            <div class="form-group">
                                <label>Description</label>
                            </div>
                        </div>
                    </div>

                    {% for equipmentField in form.equipment %}
                        {{ macros.equipmentCollection(equipmentField) }}
                    {%  endfor %}

                    <div id="equipment_fields">
                    </div>

                    <div id="equipmentPrototype" data-prototype="{{ macros.equipmentCollection(form.equipment.vars.prototype)|e }}"></div>
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default" >
                <div class="panel-body">
                    <div class="row">
                        <div class="form-group">
                            <div class="col-lg-9">
                                <a href="{{ path('diver') }}" class="btn btn-default" >Cancel</a>
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    {{ form_row(form._token) }}
    {{ form_end(form) }}
{% endblock %}

