<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Dive log {{ fullname }}
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                    <tr>
                        <th width="100px">Dive number</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Country</th>
                        <th>Location</th>
                        <th>Dive site</th>
                        <th width="64px">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for divelog in divelogs %}
                        <tr class="odd gradeX">
                            <td>{{ divelog.number }}</td>
                            <td>{{ divelog.timein|date('d-m-Y') }}</td>
                            <td>{{ divelog.timein|date('H:i:s') }}</td>
                            <td>{{ divelog.country }}</td>
                            <td>{{ divelog.location }}</td>
                            <td>{{ divelog.divesite }}</td>
                            <td>
                                <div class="btn-group">
                                    <div class="pull-right">
                                        <a href="{{ path('diver_log_edit', {'id' : divelog.id}) }}">
                                            <button type="button" class="btn btn-primary btn-xs">
                                                <span class="glyphicon glyphicon-edit"></span>
                                            </button>
                                        </a>
                                    </div>
                                </div>
                                <div class="btn-group">
                                    <div class="pull-right">
                                        <a href="">
                                            <button type="button" class="btn btn-primary btn-xs">
                                                <span class="glyphicon glyphicon-sunglasses"></span>
                                            </button>
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <!-- /.table-responsive -->
                <div class="well">
                    <a href="{{ path('diver') }}" class="btn btn-default" >Cancel</a>
                    <a href="{{ path('dive_log_add' , {'id' : diver_id}) }}" data-toggle="modal" class="btn btn-success">Add new</a>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
