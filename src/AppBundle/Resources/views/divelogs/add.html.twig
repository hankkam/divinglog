{% extends 'layout.html.twig' %}
{#{% import 'AppBundle:diver:macros.html.twig' as macros %}#}

{% block title %}Dive log{% endblock %}

{% block content %}
    {{ form_start(form) }}
    <h1 class="page-header">Dive log {{ fullname }}</h1>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Dive log details
                    <div class="pull-right">
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary btn-xs" data-toggle="collapse" data-target="#logDetails">
                                <span class="glyphicon glyphicon-chevron-down"></span>
                            </button>
                        </div>
                    </div>
                </div>
                <div id="logDetails" class="panel-body collapse in">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <div class="col-xs-2">
                                    {{ form_row(form.number) }}
                                    <p class="help-block"></p>
                                </div>
                                <div class="col-xs-2">
                                    {{ form_row(form.date) }}
                                    <p class="help-block"></p>
                                </div>
                                <div class="col-xs-2">
                                    {{ form_row(form.timein) }}
                                    <p class="help-block"></p>
                                </div>
                                <div class="col-xs-4">
                                    {{ form_row(form.timeout) }}
                                    <p class="help-block"></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <div class="col-xs-6">
                                    <div id="diveMap">
                                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1660.050126541086!2d115.59215134519533!3d-8.274222707052582!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x7c42693d22efc668!2sTumaben+US+Liberty+Wreck+Ship!5e0!3m2!1snl!2snl!4v1490540274257" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="form-group input-group">
                                        <label>Search dive location</label>
                                        <input type="text" class="form-control">
                                        <span class="input-group-btn">
                                            <label>Search</label>
                                            <button class="btn btn-default" type="button">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <div class="col-xs-4">
                                    {{ form_row(form.country) }}
                                    <p class="help-block"></p>
                                </div>
                                <div class="col-xs-4">
                                    {{ form_row(form.location) }}
                                    <p class="help-block"></p>
                                </div>
                                <div class="col-xs-4">
                                    {{ form_row(form.divesite) }}
                                    <p class="help-block"></p>
                                </div>
                            </div>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default" >
                <div class="panel-body">
                    <div class="row">
                        <div class="form-group">
                            <div class="col-lg-9">
                                <a href="{{ path('dive_log_add', {'id' : diver_id}) }}" class="btn btn-default" >Cancel</a>
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    {{ form_row(form._token) }}
    {{ form_end(form) }}
{% endblock %}

